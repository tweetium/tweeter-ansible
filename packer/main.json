{
  "variables": {
    "do_api_token": null
  },
  "builders": [
    {
      "type": "digitalocean",
      "api_token": "{{user `do_api_token`}}",
      "image": "ubuntu-18-04-x64",
      "region": "sfo2",
      "size": "s-1vcpu-1gb",
      "ssh_username": "root",
      "snapshot_name": "main"
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "../playbooks/main.yml",
      "extra_arguments": [
        "-e ansible_python_interpreter=/usr/bin/python3"
      ]
    }
  ],
  "sensitive-variables": [
    "do_api_token"
  ]
}
